extends ./layout
block content
  div(style='height:100%')
    div.shadow.p-3(style="height:100%;background:linear-gradient(rgb(246,198,144),rgb(236,143,115))")
      div.container(style='height:10%')
        nav(class="navbar navbar-expand-lg navbar-dark")
          div
            img.animated.JackInTheBox(src='logo-Recovered.png' style='width:50px;height:50px')
          a(class="navbar-brand" href="/") Urubuto
          button(class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation")
            span(class="navbar-toggler-icon")
          div(class="collapse navbar-collapse" id="navbarSupportedContent")
            ul(class="navbar-nav mr-auto")
              li(class="nav-item active")
                a(class="nav-link" href="/") Home 
                 span(class="sr-only") (current)
              li(class="nav-item")
                a(class="nav-link" href="about") About
              li(class="nav-item")
                a(class="nav-link-disabled" href="#")

      div.container.d-flex.justify-content-center.align-items-center(style='height:80%')
        div.card.shadow(style="width: 25rem;")
          div.card-body
            div.d-flex.justify-content-center.align-items-center
              img.animated.JackInTheBox(src='user2.png' style='width:50px;height:50px')
            div.mt-3(class="form-group")
              input.border-bottom(style="border:none" type="first name" class="form-control" placeholder="First name")
              small(id="emailHelp" class="form-text text-muted")
              input.border-bottom(style="border:none" type="last name" class="form-control" placeholder="Last name")
              input.border-bottom(style="border:none" type="email" class="form-control" placeholder="Email")
              input.border-bottom(style="border:none" type="school" class="form-control" placeholder="School")
              input.border-bottom(style="border:none" type="password" class="form-control" placeholder="Password")
            div.d-flex.justify-content-center.align-items-center
              button.mt-3(type="submit" class="btn btn-dark")
                span.d-inline Sign Up
      
    footer(class="navbar" style="height:11%;width:100%;background-color:#f9f9f9")
      div(class="container align-items-center")
        span(class="text-muted") Urubuto
         small designed by cedrick
        span 
         b PoweredBy
         small BK_techHouse
        div
          a.ml-2(href='https://twitter.com/bktechouse')
            img.inline(src='twitter.png' style='width:30px;height:30px')
          a.ml-2(href='https://www.facebook.com/BKTecHouseltd')
            img.inline(src='facebook.png' style='width:30px;height:30px')
          a.ml-2(href='https://www.instagram.com/bktechouseltd.rw/')
            img.inline(src='instagram.png' style='width:30px;height:30px')
